{% extends 'base.html.twig' %}

{% block title %}Patient{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/daisyui@3.1.0/dist/full.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.tailwindcss.com"></script>
{% endblock %}

{% block body %}
<body class="bg-gray-100 dark:bg-gray-900 min-h-screen flex flex-col">

    <main class="flex-grow w-full px-4 sm:px-6 lg:px-8 py-8 bg-gray-100 dark:bg-black">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-12 text-center">
            Détails du Patient
        </h1>
        
        <div class="max-w-4xl mx-auto bg-white dark:bg-gray-800 shadow-md rounded-lg p-6">
            <table class="table-auto w-full">
                <tbody class="text-gray-700 dark:text-gray-300">
                    <tr>
                        <th class="text-left px-4 py-2">ID</th>
                        <td class="px-4 py-2">{{ patient.id }}</td>
                    </tr>
                    <tr>
                        <th class="text-left px-4 py-2">Nom</th>
                        <td class="px-4 py-2">{{ patient.nom }}</td>
                    </tr>
                    <tr>
                        <th class="text-left px-4 py-2">Prénom</th>
                        <td class="px-4 py-2">{{ patient.prenom }}</td>
                    </tr>
                    <tr>
                        <th class="text-left px-4 py-2">Email</th>
                        <td class="px-4 py-2">{{ patient.email }}</td>
                    </tr>
                    <tr>
                        <th class="text-left px-4 py-2">Mot de Passe</th>
                        <td class="px-4 py-2">{{ patient.motDePasse }}</td>
                    </tr>
                    <tr>
                        <th class="text-left px-4 py-2">Historique Médical</th>
                        <td class="px-4 py-2">{{ patient.HistoriqueMedical }}</td>
                    </tr>
                    <tr>
                        <th class="text-left px-4 py-2">Allergies</th>
                        <td class="px-4 py-2">{{ patient.allergies ? patient.allergies|json_encode : 'Aucune' }}</td>
                    </tr>
                    <tr>
                        <th class="text-left px-4 py-2">Adresse Postale</th>
                        <td class="px-4 py-2">{{ patient.adressePostale }}</td>
                    </tr>
                    <tr>
                        <th class="text-left px-4 py-2">Code Postal</th>
                        <td class="px-4 py-2">{{ patient.CodePostal }}</td>
                    </tr>
                    <tr>
                        <th class="text-left px-4 py-2">Ville</th>
                        <td class="px-4 py-2">{{ patient.ville }}</td>
                    </tr>
                    <tr>
                        <th class="text-left px-4 py-2">Pays</th>
                        <td class="px-4 py-2">{{ patient.pays }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="mt-8 flex justify-center space-x-4">
            <a href="{{ path('app_patient_index') }}" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded transition duration-300 ease-in-out">
                Retour à la liste
            </a>
            <a href="{{ path('app_patient_edit', {'id': patient.id}) }}" class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded transition duration-300 ease-in-out">
                Modifier
            </a>
            {{ include('patient/_delete_form.html.twig') }}
        </div>
    </main>

</body>
{% endblock %}