{% extends 'base.html.twig' %}

{% block title %}Dashboard Piluleo{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/daisyui@3.1.0/dist/full.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet" />
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('build/theme.js') }}"></script>
{% endblock %}

{% block body %}
<body class="bg-gray-100 dark:bg-gray-900 min-h-screen flex flex-col">

    <main class="flex-grow w-full px-4 sm:px-6 lg:px-8 py-8 bg-gray-100 dark:bg-black">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-12 text-center">
            Dashboard de {{ user.prenom }} {{ user.nom }}
        </h1>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-7xl mx-auto">
            {% if isAdmin %}
            <div class="bg-white dark:bg-gray-800 overflow-hidden shadow-lg rounded-lg transition-all duration-300 hover:shadow-xl">
                <div class="p-6">
                    <div class="flex items-center mb-4">
                        <i class="ri-user-line text-indigo-600 text-3xl"></i>
                        <h2 class="ml-3 text-xl font-semibold text-gray-900 dark:text-white">Administrateur</h2>
                    </div>
                    <div class="space-y-3">
                        <a href="{{ path('app_utilisateur_index') }}" class="block text-indigo-600 hover:text-indigo-800 dark:text-indigo-400 dark:hover:text-indigo-300 transition-colors duration-200">
                            <i class="ri-list-check mr-2"></i>Liste utilisateurs
                        </a>
                        <a href="{{ path('app_register') }}" class="block text-indigo-600 hover:text-indigo-800 dark:text-indigo-400 dark:hover:text-indigo-300 transition-colors duration-200">
                            <i class="ri-user-add-line mr-2"></i>Créer nouvel utilisateur
                        </a>
                    </div>
                </div>
            </div>
            {% endif %}

            {% if isAidant or isAdmin %}
            <div class="bg-white dark:bg-gray-800 overflow-hidden shadow-lg rounded-lg transition-all duration-300 hover:shadow-xl">
                <div class="p-6">
                    <div class="flex items-center mb-4">
                        <i class="ri-file-list-line text-green-600 text-3xl"></i>
                        <h2 class="ml-3 text-xl font-semibold text-gray-900 dark:text-white">Gestion des ordonnances</h2>
                    </div>
                    <div class="space-y-3">
                        <a href="{{ path('app_ordonnance_index') }}" class="block text-green-600 hover:text-green-800 dark:text-green-400 dark:hover:text-green-300 transition-colors duration-200">
                            <i class="ri-file-list-3-line mr-2"></i>Liste des ordonnances 
                        </a>
                        <a href="{{ path('app_ordonnance_new') }}" class="block text-green-600 hover:text-green-800 dark:text-green-400 dark:hover:text-green-300 transition-colors duration-200">
                            <i class="ri-file-add-line mr-2"></i>Nouvelle ordonnance
                        </a>
                    </div>
                </div>
            </div>

            <div class="bg-white dark:bg-gray-800 overflow-hidden shadow-lg rounded-lg transition-all duration-300 hover:shadow-xl">
                <div class="p-6">
                    <div class="flex items-center mb-4">
                        <i class="ri-group-line text-blue-600 text-3xl"></i>
                        <h2 class="ml-3 text-xl font-semibold text-gray-900 dark:text-white">Gestion des patients</h2>
                    </div>
                    <div class="space-y-3">
                        <a href="{{ path('app_patient_index') }}" class="block text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 transition-colors duration-200">
                            <i class="ri-team-line mr-2"></i>Liste des Patients
                        </a>
                        <a href="{{ path('app_patient_new') }}" class="block text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 transition-colors duration-200">
                            <i class="ri-user-add-line mr-2"></i>Nouveau patient
                        </a>
                    </div>
                </div>
            </div>

            <div class="bg-white dark:bg-gray-800 overflow-hidden shadow-lg rounded-lg transition-all duration-300 hover:shadow-xl">
                <div class="p-6">
                    <div class="flex items-center mb-4">
                        <i class="ri-capsule-line text-red-600 text-3xl"></i>
                        <h2 class="ml-3 text-xl font-semibold text-gray-900 dark:text-white">Gestion des piluliers</h2>
                    </div>
                    <div class="space-y-3">
                        <a href="{{ path('app_pilulier_index') }}" class="block text-red-600 hover:text-red-800 dark:text-red-400 dark:hover:text-red-300 transition-colors duration-200">
                            <i class="ri-medicine-bottle-line mr-2"></i>Liste des piluliers
                        </a>
                        <a href="{{ path('app_pilulier_new') }}" class="block text-red-600 hover:text-red-800 dark:text-red-400 dark:hover:text-red-300 transition-colors duration-200">
                            <i class="ri-add-circle-line mr-2"></i>Nouveau pilulier
                        </a>
                    </div>
                </div>
            </div>
            {% endif %}

            {% if isPatient %}
            <div class="bg-white dark:bg-gray-800 overflow-hidden shadow-lg rounded-lg transition-all duration-300 hover:shadow-xl">
                <div class="p-6">
                    <div class="flex items-center mb-4">
                        <i class="ri-file-list-line text-green-600 text-3xl"></i>
                        <h2 class="ml-3 text-xl font-semibold text-gray-900 dark:text-white">Mes ordonnances</h2>
                    </div>
                    <div class="space-y-3">
                        <a href="{{ path('app_ordonnance_index') }}" class="block text-green-600 hover:text-green-800 dark:text-green-400 dark:hover:text-green-300 transition-colors duration-200">
                            <i class="ri-file-list-3-line mr-2"></i>Voir mes ordonnances
                        </a>
                    </div>
                </div>
            </div>
            {% endif %}
        </div>

        <div class="mt-12 text-center">
            {% if isAdmin %}
                <p class="text-lg text-gray-700 dark:text-gray-300 mb-4">Vous êtes connecté en tant qu'administrateur</p>
            {% elseif isAidant %}
                <p class="text-lg text-gray-700 dark:text-gray-300 mb-4">Vous êtes connecté en tant qu'aidant</p>
            {% elseif isPatient %}
                <p class="text-lg text-gray-700 dark:text-gray-300 mb-4">Vous êtes connecté en tant que patient</p>
            {% endif %}
            <a href="{{ path('app_logout') }}" class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded transition duration-300 ease-in-out">
                Déconnexion
            </a>
        </div>
    </main>

</body>
{% endblock %}